<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aloha.todo.mapper.TodoMapper">
<!-- 할 일 목록 -->
 <select id="list" resultType="Todo">
        SELECT *
        FROM todo
    </select>
    <!-- 조회 -->
    <select id="select" resultType="Todo">
        SELECT *
        FROM todo
        WEHRE no = #{no}
    </select>
    
    <select id="selectById" resultType="Todo">
        SELECT *
        FROM todo
        WEHRE id = #{id}
    </select>

    <!-- 등록 -->
    <insert id="insert">
        INSERT INTO todo ( id, name, seq )
        VALUES ( #{id}, #{name}, #{seq} )
    </insert>
    <!-- 수정 -->
    <update id="update">
        UPDATE todo
            <set>
                <if test="name != null">name = #{name},</if>
                <if test="status != null">status = #{status},</if>
                <if test="seq != null">seq = #{seq}</if>
                update_at = now()
            </set>
        WHERE no = #{no}
    </update>

    <update id="updateById">
        UPDATE todo
            <set>
                <if test="name != null">name = #{name},</if>
                <if test="status != null">status = #{status},</if>
                <if test="seq != null">seq = #{seq}</if>
                update_at = now()
            </set>
        WHERE id = #{id}
    </update>
    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM todo
        WHERE no = #{no}
    </delete>

    <delete id="deleteById">
        DELETE FROM todo
        WHERE id = #{id}
    </delete>

    <!-- 전체 할일 완료 -->
    <update id="completeAll">
        UPDATE todo
            SET status = true
    </update>
    <!-- 전체 삭제 -->
    <delete id="deleteAll">
        DELETE FROM todo
    </delete>
</mapper>